<p id="notice"><%= notice %></p>

<h1>Listing Torres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Portero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @torres.each do |torre| %>
      <tr>
        <td><%= torre.name %></td>
        <td><%= torre.portero %></td>
        <td><%= link_to 'Show', torre %></td>
        <td><%= link_to 'Edit', edit_torre_path(torre) %></td>
        <td><%= link_to 'Destroy', torre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

