<p id="notice"><%= notice %></p>

<h1>Listing Apartamentos</h1>

<table>
  <thead>
    <tr>
      <th>Numero puerta</th>
      <th>Piso</th>
      <th>Torre</th>
      <th>Persona</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartamentos.each do |apartamento| %>
      <tr>
        <td><%= apartamento.numero_puerta %></td>
        <td><%= apartamento.piso %></td>
        <td><%= apartamento.torre_id %></td>
        <td><%= apartamento.persona_id %></td>
        <td><%= link_to 'Show', apartamento %></td>
        <td><%= link_to 'Edit', edit_apartamento_path(apartamento) %></td>
        <td><%= link_to 'Destroy', apartamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

